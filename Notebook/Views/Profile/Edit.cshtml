@model Notebook.Models.Profile

@{
    ViewData["Title"] = "Edit Profile";
}

<h4>Edit Profile</h4>
<hr />
<div class="row">
    <div class="col-md-9">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="row form-group">
                <div class="col-md-6">
                    <img src="~/profilephoto/@User.Identity.Name/@Model.ProfilePicture" class="img-responsive" />
                    <input type="hidden" asp-for="ProfilePicture" />
                    <label class="btn btn-default btn-file top-buffer">
                        Browse <input type="file" style="display: none;" name="ProfilePictureFile" />
                    </label>
                    <span asp-validation-for="ProfilePicture" class="text-danger"></span>
                </div>
            </div>
            <div class="row form-group">
                <div class="col-md-2">
                    <label asp-for="FirsName" class="control-label"></label>
                </div>
                <div class="col-md-4">
                    <input asp-for="FirsName" class="form-control" />
                </div>
                <div class="col-md-3">
                    <span asp-validation-for="FirsName" class="text-danger"></span>
                </div>
            </div>

            <div class="row form-group">
                <div class="col-md-2">
                    <label asp-for="LastName" class="control-label"></label>
                </div>
                <div class="col-md-4">
                    <input asp-for="LastName" class="form-control" />
                </div>
                <div class="col-md-3">
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
            </div>

            <div class="row form-group">
                <div class="col-md-2">
                    <label asp-for="Gender" class="control-label"></label>
                </div>
                <div class="col-md-4">
                    <select asp-for="Gender" class="form-control" asp-items="Html.GetEnumSelectList<Notebook.Models.Gender>()"></select>
                </div>
                <div class="col-md-3">
                    <span asp-validation-for="Gender" class="text-danger"></span>
                </div>
            </div>

            <div class="row form-group">
                <div class="col-md-2">
                    <label asp-for="Birthdate" class="control-label"></label>
                </div>
                <div class="col-md-4">
                    <input asp-for="Birthdate" class="form-control" />
                </div>
                <div class="col-md-3">
                    <span asp-validation-for="Birthdate" class="text-danger"></span>
                </div>
            </div>

            <div class="row form-group">
                <div class="col-md-2">
                    <label asp-for="Weight" class="control-label"></label>
                </div>
                <div class="col-md-4">
                    <input asp-for="Weight" class="form-control" />
                </div>
                <div class="col-md-3">
                    <span asp-validation-for="Weight" class="text-danger"></span>
                </div>
            </div>
            <div class="row form-group">
                <div class="col-md-2">
                    <label asp-for="Height" class="control-label"></label>
                </div>
                <div class="col-md-4">
                    <input asp-for="Height" class="form-control" />
                </div>
                <div class="col-md-3">
                    <span asp-validation-for="Height" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="col-md-1">
                    <input type="submit" value="Save" class="btn btn-success" />
                </div>
                <div class="col-md-2">
                    <a asp-action="Details" class="btn btn-info">Back to Profile</a>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
