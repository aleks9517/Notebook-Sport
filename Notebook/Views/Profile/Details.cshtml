@model Notebook.Models.Profile


<div class="row top-buffer">
    <div>
        <div class="col-md-4">
            <div>
                <img src="~/profilephoto/@User.Identity.Name/@Model.ProfilePicture" class="img-responsive" />
            </div>
            <div class="top-buffer">
                <a asp-action="Edit" class="btn btn-block btn-info btn-radius" asp-route-id="@Model.Id">Edit</a>
            </div>
        </div>
        <div class="col-md-8">
            <div><h3> @Html.DisplayFor(model => model.FirsName)  @Html.DisplayFor(model => model.LastName)</h3></div>
            <div class="row">
                <div class="col-md-2">@Html.DisplayNameFor(model => model.Gender)</div>
                <div class="col-md-offset-1"> @Html.DisplayFor(model => model.Gender)</div>
            </div>
            <div class="row">
                <div class="col-md-2">@Html.DisplayNameFor(model => model.Birthdate)</div>
                <div class="col-md-offset-1">@Html.DisplayFor(model => model.Birthdate)</div>
            </div>
            <div class="row">
                <div class="col-md-2">@Html.DisplayNameFor(model => model.Weight)</div>
                <div class="col-md-offset-1">@Html.DisplayFor(model => model.Weight)</div>
            </div>
            <div class="row">
                <div class="col-md-2">@Html.DisplayNameFor(model => model.Height)</div>
                <div class="col-md-offset-1">@Html.DisplayFor(model => model.Height)</div>
            </div>
        </div>
    </div>
</div>
