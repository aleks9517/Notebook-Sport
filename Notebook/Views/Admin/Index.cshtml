@model IEnumerable<Notebook.Models.ApplicationUser>

<h3>List Users</h3>

<form asp-controller="Admin" asp-action="Index" class="navbar-form navbar-left">
    <div class="form-group">
        <input type="text" name="SearchString" placeholder="Search" class="form-control">
        <button class="btn btn-default" type="submit" value="Find">Find User</button>
    </div>
</form>

<table class="table">
    @foreach (var user in Model)
    {
        <tr>
            <td>@user.Email</td>
            <td>
                <form asp-action="DeleteUser" asp-route-id="@user.Id" method="post">
                    <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-userid="@user.Id">Access rights</a>
                    <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                </form>
            </td>
        </tr>
    }
</table>
<a class="btn btn-primary" asp-action="RolesList">List Role</a>